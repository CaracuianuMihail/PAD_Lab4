@using PostMaker.Models
@model List<PostViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <a href="/Home/CreatePost" class="btn btn-primary mb-4">
        Create New Post
    </a>

    @if (Model.Any())
    {
        foreach (var post in Model)
        {
            <div class="post-card">
                <div class="post-header">
                    <span class="post-author">@post.Author</span>
                    <span class="post-time">@post.Created</span>
                </div>

                <div class="post-content">
                    @Html.Raw(@post.Content)
                </div>

                <div class="post-actions">
                    <button onclick="alert('Not implemented yet!!!')">Like</button>
                </div>
            </div>
        }
    }
    else
    {
        <h5>No posts in the last 24 hours to show.</h5>
    }
</div>
 